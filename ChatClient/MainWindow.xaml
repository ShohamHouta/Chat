<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="410" Width="596.2" Closing="Window_Closing" Foreground="Black" Background="#FFDBDBDB">
    <Window.Background>
        <ImageBrush
            ImageSource="~/images/">
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="383*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="108*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="LoginButton" Content="Login" Margin="188,14,111,0" VerticalAlignment="Top" Click="LoginButton_Click"/>
        <TextBox x:Name="UsernameTextbox" HorizontalAlignment="Left" Height="8" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Margin="10,14,0,0"/>
        <TextBox x:Name="MessagesBox" Margin="10,53,0,37.8" IsReadOnly="True" Background="White" Foreground="Black" Style="{DynamicResource TextBoxStyle}">
            <TextBox.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5AEAFF" Offset="1"/>
                    <GradientStop Color="#FF0058FF"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>
        <Button x:Name="SendButton" Content="Send" Margin="0,0,67.2,3.8" VerticalAlignment="Bottom" Click="SendButton_Click" HorizontalAlignment="Right" Width="88" Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBox x:Name="MessageTextBox" Height="8" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="10,0,0,3.8" KeyDown="MessageTextBox_KeyDown"/>
        <Label x:Name="welcomelabel" Content="" Height="38" Margin="364,10,42.2,0" VerticalAlignment="Top" FontSize="16" Grid.ColumnSpan="3"/>
        <ListBox x:Name="UserListBox" Margin="24,82,10.2,38.8" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label Content="Users:" HorizontalAlignment="Right" Margin="0,53,22.2,0" VerticalAlignment="Top" Width="54" Grid.Column="1"/>
        </Grid>
</Window>
